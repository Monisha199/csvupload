<!DOCTYPE html>
<html>
    <head>
        <title><%=title%></title>
    </head>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function(){
            $('#search').on("keyup",function(){
                var value = $(this).val().toLowerCase();
                console.log(value,"value");
                $('tbody tr').filter(function(){
                    console.log($(this).text(),"para");
                    $(this).toggle($(this).text().toLowerCase().indexOf(value)>-1)
                })
            })
            
            $(".sort").click(function(){
                var column = $(this).attr("id");
                var order = $(this).attr("data-order")

                console.log("column ",column,order);

                if(order === "desc"){
                    $(this).attr('data-order','asc');
                }else{
                    $(this).attr('data-order','desc')
                }
                sortTable(column,order);
            })

            
            function sortTable(column,order){
                var rows = $('tbody tr').get();
                console.log(rows);

                rows.sort(function(a,b){
                    var A = $(a).children("td").eq(column).text().toUpperCase();
                    var B = $(b).children("td").eq(column).text().toUpperCase();
                    console.log(A,a,B,b);

                    if(A<B){
                        return order === 'asc' ? -1 : 1;
                    }else if(A > B){
                        return order === 'asc' ? 1 : -1;
                    }
                    return 0;
                });
                console.log(rows);
                $.each(rows,function(index,row){
                    $('tbody').append(row);
                })
            }
        });
    </script>
    <style>
        body{
            background-color:lavender;
        }
        .text{
            text-align: center;
        }

        #search{
            height: 30px;
            width: 200px;
        }

        table {
            border: 1px solid black;
            border-collapse: collapse;
            width: 500px;
            margin: auto;
        }
        td,th{
            border: 1px solid black;
            border-collapse: collapse;
            height: 40px;

        }
        th{
            background-color: cadetblue;
        }
        

    </style>
    <body>
        <a href="/" style="font-size: larger;">Back</a>
        <h1 class="text">CSV File: <%= fileData.filename %></h1><br/>
        <div class="text">
        <input type="text" id="search" placeholder="Search..."><br/><br/><br/>
        </div>
        <table class="text">
            <thead>
                <tr>
                    <% fileData.header_row.forEach(function(cell,index){ %>
                        <th><%=cell%>&emsp;<button class="sort" id="<%= index %>" data-order="desc">â†“</button></th>
                    <%})%>
                </tr>
            </thead>
            <tbody>
                <%fileData.data_rows.forEach(function(row){%>
                    <tr>
                        <% Object.values(row).forEach(function(cell){%>
                            <td><%=cell%></td>
                        <%});%>
                    </tr>
                <%});%>
            </tbody>
        </table>
    </body>
</html>